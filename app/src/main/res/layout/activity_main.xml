<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#ECE4E4"
        android:padding="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/downloadNextModuleBtn"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Download Next Module"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/goToNextModuleBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Go Next Module"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />


            <Button
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/goTosecondModuleBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Go to second Module"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>